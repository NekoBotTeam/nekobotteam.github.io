{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node16",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./docs/.vitepress/*"]
    },
    "types": ["vitepress/client"]
  },
  "include": [
    "docs/**/*.ts",
    "docs/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "docs/.vitepress/cache",
    "docs/.vitepress/dist",
    "docs/.vitepress/.temp"
  ],
  "vueCompilerOptions": {
    "target": "esnext"
  }
}
